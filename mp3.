pip install numpy
import json
import os
import numpy as np
from datetime import datetime

STATE_FILE = "user_cognitive_profile.json"

# ==========================================
# User Cognitive Profile
# ==========================================

class CognitiveProfile:
    def __init__(self):
        self.skill_level = 1.0
        self.assist_usage = 0.0
        self.autonomy_score = 1.0
        self.identity_stability = 1.0
        self.history = []

    def update(self, assistance_level, task_difficulty, success):
        # Track assistance usage
        self.assist_usage += assistance_level * 0.05
        self.assist_usage = min(self.assist_usage, 1.0)

        # Skill adapts based on independent effort
        effort_factor = max(0, 1 - assistance_level)
        self.skill_level += 0.01 * effort_factor * task_difficulty
        self.skill_level = min(self.skill_level, 2.0)

        # Autonomy decreases if over-assisted
        self.autonomy_score = max(0.2, 1 - self.assist_usage)

        # Identity stability declines if fully automated repeatedly
        if assistance_level > 0.8:
            self.identity_stability -= 0.005
        self.identity_stability = max(0.5, self.identity_stability)

        self.history.append({
            "time": str(datetime.now()),
            "assist": assistance_level,
            "skill": self.skill_level,
            "autonomy": self.autonomy_score,
            "identity": self.identity_stability
        })

    def save(self):
        with open(STATE_FILE, "w") as f:
            json.dump(self.__dict__, f, indent=2)

    def load(self):
        if os.path.exists(STATE_FILE):
            with open(STATE_FILE, "r") as f:
                data = json.load(f)
                self.__dict__.update(data)


# ==========================================
# AI Assistance Controller
# ==========================================

class AssistanceEngine:
    def __init__(self):
        self.max_assist = 0.8  # Hard cap for autonomy preservation

    def recommend_assistance(self, profile, task_difficulty):
        # Assist more if difficulty exceeds skill
        gap = task_difficulty - profile.skill_level
        raw_assist = max(0, gap * 0.5)

        # Autonomy safeguard
        adjusted = min(raw_assist, self.max_assist)

        return adjusted


# ==========================================
# Transparency Logger
# ==========================================

class TransparencyLog:
    @staticmethod
    def explain(assist_level):
        if assist_level < 0.3:
            return "Minimal assistance provided to encourage skill growth."
        elif assist_level < 0.6:
            return "Moderate assistance due to task difficulty."
        else:
            return "High assistance required. Autonomy safeguards applied."


# ==========================================
# Real Usage Example
# ==========================================

def run_session(task_difficulty=1.2, success=True):

    profile = CognitiveProfile()
    profile.load()

    ai = AssistanceEngine()

    assist = ai.recommend_assistance(profile, task_difficulty)

    profile.update(assist, task_difficulty, success)

    explanation = TransparencyLog.explain(assist)

    profile.save()

    return {
        "assistance_level": assist,
        "skill_level": profile.skill_level,
        "autonomy_score": profile.autonomy_score,
        "identity_stability": profile.identity_stability,
        "explanation": explanation
    }


if __name__ == "__main__":
    result = run_session(task_difficulty=1.5)
    print("\nSession Result:")
    for k, v in result.items():
        print(f"{k}: {v}")
