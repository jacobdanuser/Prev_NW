        # POWER AND CONTROL RISKS
        RiskFactor(
            id="pc_001",
            category=RiskCategory.POWER_CONTROL,
            name="Corporate Mind Ownership",
            description="Technology company may claim ownership of subject's digital consciousness",
            severity=RiskSeverity.CRITICAL,
