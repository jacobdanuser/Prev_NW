# INITIALIZATION AND EXAMPLE USAGE
# ============================================================================

def create_comprehensive_risk_library() -> List[RiskFactor]:
    """Create full risk factor library from risk analysis"""
    
    risks = [
        # CONSCIOUSNESS AND IDENTITY RISKS
        RiskFactor(
            id="ci_001",
            category=RiskCategory.CONSCIOUSNESS_IDENTITY,
            name="Consciousness Continuity Paradox",
            description="Digital copy exists but original biological brain may still experience death",
            severity=RiskSeverity.CRITICAL,
            probability=1.0,
            impact_if_occurs="Subject may not survive; copy may not be same consciousness",
            affected_stakeholders=["subject", "family", "society"],
            monitoring_triggers=["upload_completion", "consciousness_verification"],
            mitigation_strategies=["Extensive philosophical counseling", "Multiple consciousness tests", "Mandatory waiting periods"]
        ),
        
        RiskFactor(
            id="ci_002",
            category=RiskCategory.CONSCIOUSNESS_IDENTITY,
            name="Personal Identity Dissolution",
            description="Digital consciousness may not maintain unified identity and sense of self",
            severity=RiskSeverity.HIGH,
            probability=0.7,
            impact_if_occurs="Subject experiences fragmentation of personality, existential confusion",
            affected_stakeholders=["subject", "clinical_team"],
            monitoring_triggers=["identity_tests", "psychological_evaluation"],
            mitigation_strategies=["Psychological support", "Identity continuity verification", "Regular therapeutic intervention"]
        ),
        
        # EMBODIED EXPERIENCE RISKS
        RiskFactor(
            id="ee_001",
            category=RiskCategory.EMBODIED_EXPERIENCE,
            name="Loss of Sensory Richness",
            description="Disconnection from biological sensations fundamentally changes cognition",
            severity=RiskSeverity.HIGH,
            probability=0.95,
            impact_if_occurs="Profound psychological deterioration, loss of emotional depth",
            affected_stakeholders=["subject"],
            monitoring_triggers=["emotion_tests", "meaning_assessment"],
            mitigation_strategies=["Virtual embodiment systems", "Simulated sensory feedback", "Regular mental health monitoring"]
        ),
        
        RiskFactor(
            id="ee_002",
            category=RiskCategory.EMBODIED_EXPERIENCE,
            name="Loss of Biological Meaning-Making",
            description="Human meaning tied to mortality and limitation may vanish",
            severity=RiskSeverity.HIGH,
            probability=0.8,
            impact_if_occurs="Existential despair, loss of motivation, meaning crisis",
            affected_stakeholders=["subject", "society"],
