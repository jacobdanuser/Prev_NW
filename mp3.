            severity=RiskSeverity.HIGH,
            probability=0.95,
            impact_if_occurs="Profound psychological deterioration, loss of emotional depth",
            affected_stakeholders=["subject"],
            monitoring_triggers=["emotion_tests", "meaning_assessment"],
            mitigation_strategies=["Virtual embodiment systems", "Simulated sensory feedback", "Regular mental health monitoring"]
        ),
        
        RiskFactor(
            id="ee_002",
            category=RiskCategory.EMBODIED_EXPERIENCE,
            name="Loss of Biological Meaning-Making",
